{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SPEC.json",
  "description": "Discovery Router specification output format",
  "type": "object",
  "required": ["project", "users", "features", "constraints"],
  "properties": {
    "project": {
      "type": "object",
      "required": ["name", "summary", "route"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "summary": {
          "type": "string",
          "description": "One-paragraph project description"
        },
        "route": {
          "type": "string",
          "enum": ["A", "B", "C", "D"],
          "description": "Detected discovery route"
        },
        "status": {
          "type": "string",
          "enum": ["discovery-in-progress", "discovery-complete", "ready-for-development"],
          "default": "discovery-complete"
        }
      }
    },
    "users": {
      "type": "array",
      "description": "User personas and their contexts",
      "items": {
        "type": "object",
        "required": ["type", "persona", "context"],
        "properties": {
          "type": {
            "type": "string",
            "description": "User type (end-user, admin, api-consumer, etc.)"
          },
          "persona": {
            "type": "string",
            "description": "Brief persona description"
          },
          "context": {
            "type": "string",
            "description": "How and when they use the system"
          },
          "goals": {
            "type": "array",
            "items": { "type": "string" },
            "description": "What they're trying to accomplish"
          }
        }
      }
    },
    "features": {
      "type": "array",
      "description": "Feature specifications",
      "items": {
        "type": "object",
        "required": ["id", "priority", "user_story", "acceptance_criteria"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^F[0-9]{3}$",
            "description": "Feature ID (F001, F002, etc.)"
          },
          "priority": {
            "type": "string",
            "enum": ["must-have", "should-have", "nice-to-have"],
            "description": "MoSCoW priority"
          },
          "user_story": {
            "type": "string",
            "description": "As a [user], I want [action] so that [benefit]"
          },
          "acceptance_criteria": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Testable criteria for completion"
          },
          "technical_notes": {
            "type": "string",
            "description": "Implementation considerations"
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Feature IDs this depends on"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "business_rules": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Non-negotiable business logic"
        },
        "technical": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Technical constraints (stack, hosting, etc.)"
        },
        "timeline": {
          "type": "string",
          "description": "Deadline or timeline constraints"
        },
        "budget": {
          "type": "string",
          "description": "Budget constraints or range"
        },
        "compliance": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Regulatory/compliance requirements"
        }
      }
    },
    "integrations": {
      "type": "array",
      "description": "External system integrations",
      "items": {
        "type": "object",
        "required": ["system", "type"],
        "properties": {
          "system": {
            "type": "string",
            "description": "System name"
          },
          "type": {
            "type": "string",
            "enum": ["API", "database", "file", "webhook", "manual"],
            "description": "Integration type"
          },
          "direction": {
            "type": "string",
            "enum": ["inbound", "outbound", "bidirectional"],
            "description": "Data flow direction"
          },
          "complexity": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Integration complexity"
          },
          "notes": {
            "type": "string",
            "description": "Additional context"
          }
        }
      }
    },
    "open_questions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Unresolved questions requiring follow-up"
    },
    "risks": {
      "type": "array",
      "description": "Identified project risks",
      "items": {
        "type": "object",
        "required": ["description", "severity"],
        "properties": {
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "mitigation": {
            "type": "string",
            "description": "How to address this risk"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "description": "Generation metadata",
      "properties": {
        "generated_at": { "type": "string", "format": "date-time" },
        "session_id": { "type": "string" },
        "route": { "type": "string" },
        "model": { "type": "string" },
        "tokens_used": { "type": "integer" }
      }
    }
  }
}
