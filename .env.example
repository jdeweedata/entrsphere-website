# Anthropic API Key for Discovery Router
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Convex Configuration
NEXT_PUBLIC_CONVEX_URL=https://your-convex-deployment.convex.cloud

# App URL (for callbacks)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# PayFast Payment Gateway
# Get your credentials from: https://my.payfast.io/settings/developer-settings
# Sandbox mode: Set to "true" for testing, "false" for production
PAYFAST_SANDBOX=true
# Merchant credentials from PayFast dashboard
PAYFAST_MERCHANT_ID=your_merchant_id
PAYFAST_MERCHANT_KEY=your_merchant_key
# Security passphrase (optional but recommended)
# Set this in PayFast dashboard under Settings > Developer Settings > Security Passphrase
PAYFAST_PASSPHRASE=your_passphrase

# Paystack Payment Gateway (legacy)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_key
PAYSTACK_SECRET_KEY=sk_test_your_key
